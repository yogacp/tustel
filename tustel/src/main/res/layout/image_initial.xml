<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/preview"
        android:layout_width="@dimen/space_72"
        android:layout_height="@dimen/space_72"
        android:layout_margin="@dimen/space_tiny"
        android:background="#80000000"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/selection"
        android:layout_width="@dimen/space_72"
        android:layout_height="@dimen/space_72"
        android:layout_gravity="center"
        android:background="#30000000"
        android:src="@drawable/ic_check"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/isVideo"
        android:layout_width="@dimen/space_20"
        android:layout_height="@dimen/space_15"
        android:layout_marginStart="@dimen/space_smallest"
        android:layout_marginBottom="@dimen/space_small"
        android:src="@drawable/ic_video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>